{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["spec", "grid"],
  "properties": {
    "spec": {
      "type": "object",
      "required": ["kind", "entry", "variables", "dt", "t_end"],
      "properties": {
        "kind": { "enum": ["python", "xmile"] },
        "entry": { "type": "string" },
        "variables": { "type": "array", "items": { "type": "string" } },
        "dt": { "type": "number" },
        "t_end": { "type": "number" }
      },
      "additionalProperties": false
    },
    "grid": {
      "type": "object",
      "additionalProperties": { "type": "array", "items": { "type": "number" } }
    },
    "budget": { "type": "number" },
    "seed": { "type": "number" }
  },
  "additionalProperties": false
}